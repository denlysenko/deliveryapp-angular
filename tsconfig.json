{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "esnext",
    "outDir": "./dist/out-tsc",
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "downlevelIteration": true,
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom", "es6", "es2015.iterable"],
    "baseUrl": ".",
    "paths": {
      "@base/*": ["src/app/base/*"],
      "@ui/*": ["src/app/ui/*"],
      "@common/*": ["src/app/common/*"],
      "@core/*": ["src/app/modules/core/*"],
      "@app-shell/*": ["src/app/modules/app-shell/*"],
      "@auth/*": ["src/app/modules/auth/*"],
      "@orders/*": ["src/app/modules/orders/*"],
      "@users/*": ["src/app/modules/users/*"],
      "@payments/*": ["src/app/modules/payments/*"],
      "~/*": ["src/*"],
      "core-js/es7/reflect": [
        "./node_modules/core-js/proposals/reflect-metadata"
      ],
      "*": ["./node_modules/tns-core-modules/*", "./node_modules/*"]
    }
  }
}
